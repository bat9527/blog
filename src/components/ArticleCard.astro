---
interface Props {
  id: string;
  title: string;
  subtitle: string;
  publishedAt: string;
  readTime: string;
  tags: string[];
  thumbnailUrl: string;
  claps: number;
  comments: number;
}

const { id, title, subtitle, publishedAt, readTime, tags, thumbnailUrl, claps, comments } = Astro.props;
---

<article class="py-6 md:py-8 border-b border-gray-100 cursor-pointer hover:bg-gray-50/50 transition-colors -mx-4 px-4 md:mx-0 md:px-0">
  <a href={`${import.meta.env.BASE_URL}/blog/${id}`} class="block">
    <div class="flex gap-4 md:gap-6">
      <div class="flex-1 min-w-0">
        <div class="flex items-center gap-2 mb-2 md:mb-3">
          <img src={`${import.meta.env.BASE_URL}/images/avatar.jpg`} class="w-5 h-5 rounded-full" alt="Author" />
          <span class="text-xs text-gray-600">Written by Me</span>
          <span class="text-xs text-gray-400">Â·</span>
          <span class="text-xs text-gray-500">{publishedAt}</span>
        </div>
        
        <h2 class="text-lg md:text-xl lg:text-2xl font-bold text-gray-900 mb-1.5 md:mb-2 leading-tight font-serif line-clamp-2">
          {title}
        </h2>
        <p class="text-gray-600 text-sm md:text-base mb-3 md:mb-4 line-clamp-2 leading-relaxed">
          {subtitle}
        </p>
        
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3 md:gap-4 text-xs text-gray-500 flex-wrap">
            <span class="px-2 py-1 bg-gray-100 rounded-full">{tags[0]}</span>
            <span class="hidden sm:inline">{readTime}</span>
            <div class="flex items-center gap-1">
              <span>ğŸ‘</span> <span class="hidden sm:inline">{claps}</span><span class="sm:hidden">{claps > 1000 ? `${Math.floor(claps/1000)}k` : claps}</span>
            </div>
            <div class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              {comments}
            </div>
          </div>
        </div>
      </div>
      
      <div class="w-20 h-20 sm:w-24 sm:h-24 md:w-28 md:h-28 lg:w-32 lg:h-32 flex-shrink-0">
        <img 
          src={thumbnailUrl} 
          alt={title}
          class="w-full h-full object-cover rounded"
        />
      </div>
    </div>
  </a>
</article>
