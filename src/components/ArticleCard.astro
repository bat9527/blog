---
interface Props {
  id: string;
  title: string;
  subtitle: string;
  publishedAt: string;
  readTime: string;
  tags: string[];
  thumbnailUrl: string;
}

const { id, title, subtitle, publishedAt, readTime, tags, thumbnailUrl } = Astro.props;
---

<article class="py-6 md:py-8 border-b border-gray-100 cursor-pointer hover:bg-gray-50/50 transition-colors -mx-4 px-4 md:mx-0 md:px-0">
  <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/${id}`} class="block">
    <div class="flex gap-4 md:gap-6">
      <div class="flex-1 min-w-0">
        <h2 class="text-lg md:text-xl lg:text-2xl font-bold text-gray-900 mb-1.5 md:mb-2 leading-tight font-serif line-clamp-2">
          {title}
        </h2>
        <p class="text-gray-600 text-sm md:text-base mb-3 md:mb-4 line-clamp-2 leading-relaxed">
          {subtitle}
        </p>
        
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3 md:gap-4 text-xs text-gray-500 flex-wrap">
            {tags.slice(0, 3).map(tag => (
              <span class="px-2 py-1 bg-gray-100 rounded-full">{tag}</span>
            ))}
            <span>{publishedAt}</span>
            <span class="hidden sm:inline">{readTime}</span>

          </div>
        </div>
      </div>
      
      <div class="w-20 h-20 sm:w-24 sm:h-24 md:w-28 md:h-28 lg:w-32 lg:h-32 flex-shrink-0">
        <img 
          src={thumbnailUrl} 
          alt={title}
          class="w-full h-full object-cover rounded"
        />
      </div>
    </div>
  </a>
</article>
